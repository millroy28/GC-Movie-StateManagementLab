
@{
    ViewData["Title"] = "Checkout";
}

@model List<Movie>

@{
    double total = 0;
}

@if(Model.Count == 0)
{
    <h3>Cart Empty</h3>
    <a href="/Movie/ViewMovies">Return to Movie Selection</a>
}
else
{

    <h1>Checkout</h1>
    <h3>Here is your receipt!</h3>
    <p><b>Movies Rented:</b></p>
    <ul>
        @foreach(var movie in Model)
        {
            <li>@movie.Title : $@movie.RentalPrice </li>
            total += movie.RentalPrice;
        }
    </ul>
    <p><b>Total Rendered: $@total</b></p>
    <h3>Thank you for renting with us!</h3>
    <p><a href ="/Movie/Clear">Return Home</a></p>
}




