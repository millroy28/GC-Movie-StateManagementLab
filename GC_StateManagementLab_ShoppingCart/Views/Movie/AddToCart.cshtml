
@{
    ViewData["Title"] = "ReviewCart";
}


@model List<Movie>

<h1>Checkout</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Runtime</th>
        <th>Price</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Description</td>
            <td>@movie.RunTime</td>
            <td>$@movie.RentalPrice</td>
        </tr>
    }
</table>

